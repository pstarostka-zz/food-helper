{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "sourceMap": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "build",
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "lib": ["dom", "es2018"],
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@food-helper/ui/shared": ["libs/ui/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
